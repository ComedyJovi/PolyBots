#ifndef ENCODERS_H_
#define ENCODERS_H_


#include "main.h"


void get_encoder_vals(int * right, int * left){

	if(*ENCODERS == 1 || *ENCODERS == 3)
		*left = 1;
	else
		*left = 0;

	if(*ENCODERS == 2 || *ENCODERS == 3)
		*right = 1;
	else
		*right = 0;

}

#endif /* ENCODERS_H_ */
